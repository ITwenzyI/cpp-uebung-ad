1: LDA R1, n      // Eingabewert n
2: LDA R2, 0      // Ergebnisregister initialisieren
3: LDA R3, n      // Zähler = n
4: JEZ R3, 8        // Wenn R3 == 0, dann Sprung zu 8 (Ende)
5: ADD R2, R1      // R2 = R2 + R1
6: SUB R3, 1       // R3 = R3 - 1
7: JMP 4          // Springe zurück zur Schleifenprüfung
8: HLT            // Fertig, Ergebnis in R2
